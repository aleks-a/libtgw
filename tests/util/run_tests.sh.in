# Set up variables
BIN_DIR="@TGW_TEST_BIN_DIR@"
SRC_DIR="@TGW_TEST_SRC_DIR@"
OUT_DIR="@TGW_TEST_OUT_DIR@"
SCRIPT_DIR="@TGW_TEST_SCRIPT_DIR@"

TYPE=$1

TYPE_LIST="corr cov mem perf prof"


# Source some files
. "$SCRIPT_DIR/helpers.sh"


# Make sure that type is valid
if [ "$TYPE" = "" ] ; then
	TYPE="corr"
fi
is_in_list "$TYPE" "$TYPE_LIST" || \
	(echo "Unknown test type \"$TYPE\"" && exit 1)




